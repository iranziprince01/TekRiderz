# TekRiderz Frontend Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# API CONFIGURATION
# ================================
VITE_API_URL=http://localhost:3000
VITE_API_VERSION=v1

# ================================
# APPLICATION SETTINGS
# ================================
VITE_APP_NAME=TekRiderz
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern E-Learning Platform

# ================================
# ENVIRONMENT SETTINGS
# ================================
VITE_NODE_ENV=development
VITE_DEV_MODE=true

# ================================
# FRONTEND URL CONFIGURATION
# ================================
VITE_FRONTEND_URL=http://localhost:5173
VITE_BASE_URL=http://localhost:5173

# ================================
# AUTHENTICATION SETTINGS
# ================================
VITE_AUTH_ENABLED=true
VITE_ENABLE_GUEST_MODE=false
VITE_SESSION_TIMEOUT=900000

# ================================
# EXTERNAL SERVICES
# ================================
# Cloudinary for image upload (free tier: 25GB storage)
# 
# OPTION 1: Individual environment variables (RECOMMENDED for frontend)
# This approach is more secure as it doesn't expose API secrets
# To get these values:
# 1. Sign up at https://cloudinary.com (free account)
# 2. Go to Dashboard -> Account Details
# 3. Copy Cloud Name and create an upload preset
# 4. For upload preset: Settings -> Upload -> Add upload preset
#    - Preset name: tekriders-uploads  
#    - Signing Mode: Unsigned
#    - Folder: tekriders/course-thumbnails (optional)
VITE_CLOUDINARY_CLOUD_NAME=dsn0nn5xz
VITE_CLOUDINARY_UPLOAD_PRESET=tekriders-uploads

# OPTION 2: Full Cloudinary URL (for backend only - DO NOT use in frontend)
# CLOUDINARY_URL=cloudinary://<your_api_key>:<your_api_secret>@dsn0nn5xz
# ⚠️ WARNING: Never expose API secrets in frontend environment variables!

# Local fallback settings (automatically used when Cloudinary is not available)
# These files will be stored in browser localStorage as base64
# Recommended max size per image: 2MB for better performance
VITE_ENABLE_LOCAL_THUMBNAILS=true
VITE_MAX_LOCAL_THUMBNAIL_SIZE=2097152

# If you want to use a backend proxy for uploads, you can set:
# VITE_USE_BACKEND_UPLOAD=true

# YouTube Data API (optional - for video metadata)
VITE_YOUTUBE_API_KEY=your-youtube-api-key

# Google Forms integration (no API key needed)
VITE_GOOGLE_FORMS_ENABLED=true

# CouchDB/Cloudant Database
VITE_COUCHDB_URL=https://your-account.cloudantnosqldb.appdomain.cloud
VITE_COUCHDB_USER=your-api-key
VITE_COUCHDB_PASSWORD=your-api-secret

# ================================
# FEATURES CONFIGURATION
# ================================
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false

# ================================
# LANGUAGE SETTINGS
# ================================
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,rw
VITE_ENABLE_RTL=false

# ================================
# THEME CONFIGURATION
# ================================
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_THEME_SWITCHING=true

# ================================
# FILE UPLOAD SETTINGS (Legacy - now using external services)
# ================================
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4,application/pdf
VITE_UPLOAD_ENDPOINT=/api/v1/upload

# ================================
# MEDIA SETTINGS
# ================================
VITE_ENABLE_VIDEO_PLAYER=true
VITE_DEFAULT_VIDEO_QUALITY=720p
VITE_ENABLE_VIDEO_TRANSCRIPTS=true

# ================================
# ACCESSIBILITY SETTINGS
# ================================
VITE_ENABLE_ACCESSIBILITY=true
VITE_ENABLE_SCREEN_READER=true
VITE_ENABLE_HIGH_CONTRAST=true

# ================================
# PERFORMANCE SETTINGS
# ================================
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_CACHING=true

# ================================
# DEVELOPMENT SETTINGS
# ================================
VITE_ENABLE_DEBUG=false
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_HOT_RELOAD=true

# ================================
# SOCIAL AUTHENTICATION (Optional)
# ================================
# VITE_GOOGLE_CLIENT_ID=your-google-client-id
# VITE_FACEBOOK_APP_ID=your-facebook-app-id
# VITE_GITHUB_CLIENT_ID=your-github-client-id

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=https://your-sentry-dsn.com
# VITE_INTERCOM_APP_ID=your-intercom-app-id

# ================================
# PAYMENT INTEGRATION (Optional)
# ================================
# VITE_STRIPE_PUBLIC_KEY=pk_test_...
# VITE_PAYPAL_CLIENT_ID=your-paypal-client-id

# ================================
# NOTIFICATION SETTINGS
# ================================
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_NOTIFICATION_TIMEOUT=5000
VITE_ENABLE_SOUND_NOTIFICATIONS=false

# ================================
# CACHE SETTINGS
# ================================
VITE_CACHE_ENABLED=true
VITE_CACHE_DURATION=3600000
VITE_CACHE_SIZE_LIMIT=52428800

# ================================
# OFFLINE SETTINGS
# ================================
VITE_OFFLINE_ENABLED=true
VITE_OFFLINE_STORAGE_LIMIT=104857600
VITE_OFFLINE_SYNC_INTERVAL=300000

# ================================
# SECURITY SETTINGS
# ================================
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_REDIRECT=false
VITE_ENABLE_SECURITY_HEADERS=true

# ================================
# LOGGING SETTINGS
# ================================
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_ERROR_REPORTING=false

# ================================
# BRANDING SETTINGS
# ================================
VITE_BRAND_COLOR=#3B82F6
VITE_BRAND_SECONDARY_COLOR=#10B981
VITE_BRAND_ACCENT_COLOR=#F59E0B

# ================================
# CONTACT SETTINGS
# ================================
VITE_SUPPORT_EMAIL=support@tekriders.com
VITE_CONTACT_PHONE=+1-555-0123
VITE_COMPANY_ADDRESS=123 Learning Street, Education City

# ================================
# SOCIAL MEDIA LINKS
# ================================
VITE_TWITTER_URL=https://twitter.com/tekriders
VITE_FACEBOOK_URL=https://facebook.com/tekriders
VITE_LINKEDIN_URL=https://linkedin.com/company/tekriders
VITE_INSTAGRAM_URL=https://instagram.com/tekriders

# ================================
# IMPORTANT NOTES
# ================================
# 1. All VITE_ prefixed variables are exposed to the client
# 2. Never include sensitive data in frontend environment variables
# 3. Use different values for development and production
# 4. Some features may require backend configuration as well
# 5. Boolean values should be 'true' or 'false' (strings)
# 6. Numbers should be provided as strings and parsed in code
# 7. URLs should not have trailing slashes
# 8. Test all configuration changes thoroughly 